<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <View
    android:id="@+id/mainColor"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="16dp"
    android:background="@color/main_color"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/mainText"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:textColor="@color/white"
      android:gravity="center"
      android:textSize="24sp"
      android:text="@string/main_string"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      tools:text="Test 1"/>

  <View
    android:id="@+id/secondaryColor"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="16dp"
    android:background="@color/secondary_color"
    app:layout_constraintTop_toBottomOf="@id/mainColor"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/secondaryText"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:textColor="@color/white"
      android:gravity="center"
      android:textSize="24sp"
      android:text="@string/secondary_string"
      app:layout_constraintTop_toBottomOf="@id/mainText"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      tools:text="Test 2"/>

  <View
    android:id="@+id/thirdColor"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="16dp"
    android:background="@color/third_color"
    app:layout_constraintTop_toBottomOf="@id/secondaryColor"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/thirdText"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:textColor="@color/white"
      android:gravity="center"
      android:textSize="24sp"
      android:text="@string/third_string"
      app:layout_constraintTop_toBottomOf="@id/secondaryText"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      tools:text="Test 3"/>

  <View
      android:id="@+id/fourthColor"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:padding="16dp"
      android:background="@color/fourth_color"
      app:layout_constraintTop_toBottomOf="@id/thirdColor"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/fourthText"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:textColor="@color/white"
      android:gravity="center"
      android:textSize="24sp"
      android:text="@string/fourth_string"
      app:layout_constraintTop_toBottomOf="@id/thirdText"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      tools:text="Test 4"/>

</androidx.constraintlayout.widget.ConstraintLayout>